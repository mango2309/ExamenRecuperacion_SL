<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenRecuperacion_SL.MainPage"
             xmlns:local="clr-namespace:ExamenRecuperacion_SL.ViewModelsSL">

    <ContentPage.BindingContext>
        <local:MainSLViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <CollectionView ItemsSource="{Binding Breeds}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="Medium" />
                        <CollectionView ItemsSource="{Binding Images}" HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding}" HeightRequest="100" WidthRequest="100" />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
